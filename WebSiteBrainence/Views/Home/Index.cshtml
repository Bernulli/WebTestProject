@model List<DAL.FileInfoData>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post,
        new { enctype = "multipart/form-data" }))
    {

        <input type="text" name="search" class="form-control" />
        <br />
        <input type="file" name="file" />
        <br />
        <input type="submit" class="btn btn-success" value="Завантажити на сервер" />
    }
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Список даних БД</h2>
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Слово для пошуку</th>
                    <th>Кількість входжень в черення</th>
                    <th>Слова в речені у звороньому порядку</th>
                    <th>Речення</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Word</td>
                    <td>@item.CountWords</td>
                    <td>@item.ReverseWordText</td>
                    <td>@item.OriginText</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    
</div>